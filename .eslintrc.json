{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn", // 선언만 하고 쓰지 않은 변수 경고
        "no-undef": "error", // 정의되지 않은 변수 사용 금지
        "no-console": "off", // console.log 허용 (원하면 "warn" 또는 "error")
        "eqeqeq": ["error", "always"], // 항상 === 사용
        "curly": "error", // 중괄호 생략 금지 (if/else 한 줄도 중괄호 강제)
        "quotes": ["error", "single"], // 항상 작은따옴표 사용
        "semi": ["error", "always"], // 항상 세미콜론 사용
        "arrow-parens": ["error", "avoid"], // 화살표 함수에서 괄호 생략 허용
        "prefer-const": "error", // 재할당 없는 변수는 const 사용
        "no-var": "error", // var 사용 금지
        "comma-dangle": ["error", "only-multiline"] // 마지막 쉼표 허용 (여러 줄일 때만)
    }
}
